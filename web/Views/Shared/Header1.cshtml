@using project.Models
<header id="header" class="pt-lg-5 pt-md-3 pt-2 position-absolute w-100">
	<div class="container-fluid px-xl-17 px-lg-5 px-md-3 px-0 d-flex flex-wrap">
		<div class="col-6 col-sm-3 col-lg-2 order-sm-2 order-md-0 dis-none">
			<!-- langList -->
			<ul class="nav nav-tabs langList pt-xl-6 pt-lg-4 pt-3 border-bottom-0">

					@*kiểm tra người dùng đã đăng nhập chưa*@
					@if (!String.IsNullOrEmpty(Context.Session.GetString("customer_email")))
					{
					<li class="menu-item"><a href="#">Xin chào @Context.Session.GetString("customer_email")</a></li>
					<li class="menu-item"><a title="Register or Login" href="/Account/Logout">Logout</a></li>
					}
					else
					{
					<li class="menu-item"><a title="Register or Login" href="/Account/Login">Login</a></li>
					<li class="menu-item"><a title="Register or Login" href="/Account/Register">Register</a></li>
					}

			</ul>
		</div>
		<div class="col-12 col-sm-6 col-lg-8 static-block">
			<!-- mainHolder -->
			<div class="mainHolder justify-content-center">
				<!-- pageNav1 -->
				<nav class="navbar navbar-expand-lg navbar-light p-0 pageNav1 position-static">
					<button type="button" class="navbar-toggle collapsed position-relative mt-md-2" data-toggle="collapse" data-target="#navbarNav" aria-expanded="false">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarNav">
						<ul class="navbar-nav mx-auto text-uppercase d-inline-block">
							
							<li class="nav-item active">
								<a class="d-block" href="/Home">Home</a>
							</li>
							<li class="nav-item">
								<a class="d-block" href="/Products/Category">Shop</a>
							</li>
							<li class="nav-item">
								<a class="d-block" href="/About">About</a>
							</li>
							<li class="nav-item">
								<a class="nLogo" href="/Home"><img src="~/Frontend/images/logo.png" alt="Botanical" class="img-fluid"></a>
							</li>
							<li class="nav-item">
								<a class="d-block" href="/Blog">Blog</a>
							</li>
							<li class="nav-item dropdown">
								@if (!String.IsNullOrEmpty(Context.Session.GetString("customer_email")))
								{
									<a class="d-block" href="/Account/Orders">My Cart</a>
								}
								else
								{
									<a class="d-block" href="/Cart">Cart Page</a>
								}
							</li>
							<li class="nav-item">
								<a class="d-block" href="/Contact">Contact</a>
							</li>
						</ul>
					</div>
				</nav>
				<div class="logo">
					<a href="/Home"><img src="~/Frontend/images/logo.png" alt="Botanical" class="img-fluid"></a>
				</div>
			</div>
		</div>
		<div class="col-6 col-sm-3 col-lg-2 order-sm-3 order-md-0 dis-none">
			<!-- wishList -->
			<ul class="nav nav-tabs wishList pt-xl-5 pt-lg-4 pt-3 mr-xl-3 mr-0 justify-content-end border-bottom-0">
				<li class="nav-item"><a class="nav-link icon-search" href="javascript:void(0);"></a></li>
				<li class="nav-item"><a class="nav-link position-relative icon-heart" href="javascript:void(0);"><span class="num rounded d-block">1</span></a></li>
				<li class="nav-item"><a class="nav-link position-relative icon-cart" href="/Cart"><span class="num rounded d-block">@Cart.CartQuantity(Context.Session)</span></a></li>
			</ul>
		</div>
		
	</div>
</header>
