@{
    //import file Layout.cshtml vao day
    //ViewBag.Tile = "Create";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
    string Name = Model != null ? Model.Name : "";
    string Email = Model != null ? Model.Email : "";
    string Address = Model != null ? Model.Address : "";
    string Phone = Model != null ? Model.Phone : "";
}

<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Account</h3></div>
                    <div class="card-body">
                        <form method="post" action="@ViewBag.action">
                            <div class="form-floating mb-3">
                                <input class="form-control" id="inputFirstName" type="text" value="@Name" name="Name" />
                                <label for="inputFirstName">Name</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input class="form-control" id="inputEmail" type="email" value="@Email" name="Email" />
                                <label for="inputEmail">Email address</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input class="form-control" id="inputAddress" type="text" value="@Address" name="Address" />
                                <label for="inputEmail">Address</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input class="form-control" id="inputPhone" type="text" value="@Phone" name="Phone" />
                                <label for="inputEmail">Phone</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input class="form-control" id="inputPassword" type="password" name="Password" />
                                <label for="inputPassword">Password</label>
                            </div>

                            <div class="mt-4 mb-0">
                                <div class="d-grid">
                                    <input class="btn btn-primary btn-block" type="submit" value="Create Account">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>