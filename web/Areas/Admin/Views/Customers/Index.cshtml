@*nhan dien cac file trong thu muc Models*@
@using project.Models
@using X.PagedList.Mvc.Core
@*khai bao kieu du lieu cua Model*@
@model X.PagedList.IPagedList<ItemCustomer>
@*doi tuong de goi ham hien thi phan trang*@

@{
    //import file Layout.cshtml vao day
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}
<div class="card mb-4">
    <div style="margin-bottom:5px;">
        <a href="/Admin/Customers/Create" class="btn btn-primary">Add Customer</a>
    </div>
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        List Customers
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.Phone</td>
                    <td style="text-align:center;">
                        <a href="/Admin/Customers/Update/@item.Id">Update</a>&nbsp;
                        <a href="/Admin/Customers/Delete/@item.Id" onclick="return window.confirm('Are you sure?');">Delete</a>
                    </td>
                </tr>
            }

        </table>
        <div class="datatable-pagination">
            @Html.PagedListPager(Model,page=>Url.Action("Index",new{page=page}))
        </div>

    </div>
</div>
